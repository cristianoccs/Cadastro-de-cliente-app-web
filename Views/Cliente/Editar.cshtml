@model CadastroModel 
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">Cadastro editar</a>.</p>
</div>


<form asp-controller="Cliente" asp-action="Alterar" method="post">

    <input type="text" asp-for="Id" />

    <div class="form-group">
        <label for="id"> Presisar </label>
        <input type="text" asp-route-id="id" class="form-control" placeholder=" Diginte id ">

    </div>
    
    <div class="form-group">
        <label for="Nome"> Nome Completo </label>
        <input type="text" asp-for="name" class="form-control" placeholder=" Diginte o nome ">

    </div>
    <div class="form-group">
        <label for="email"> Email </label>
        <input type="text" asp-for="mail" class="form-control" placeholder=" Diginte o email ">

    </div>
    <div class="form-group">
        <label for="cpf"> CPF </label>
        <input type="text" asp-for="cpf" class="form-control" placeholder=" Diginte o CPF ">

    </div>
    <div class="form-group">
        <label for="idade"> Idade </label>
        <input type="text" asp-for="idade" class="form-control" placeholder=" Diginte a Idade ">

    </div>

    <button type="submit" class="btn btn-primary">editar</button>
    <a class="btn btn-primary" asp-controller="Cliente" asp-action="Index" role="button">voltar</a>
    <!-- <button type="submit" class="btn btn-primary">Editar</button>-->
    <!--<button type="submit" class="btn btn-primary">Excluir</button>-->

</form>


